<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <application
        android:label="finora"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
              <!-- Especifica um tema Android a ser aplicado a esta Activity assim que
                  o processo Android for iniciado. Esse tema é visível ao usuário
                  enquanto a UI Flutter inicializa. Depois disso, esse tema continua
                  a determinar o fundo (Window background) atrás da UI Flutter. -->
            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
           <!-- Não remova o meta-data abaixo.
               Isso é utilizado pela ferramenta Flutter para gerar GeneratedPluginRegistrant.java -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>
        <!-- Necessário para consultar atividades que podem processar texto, veja:
            https://developer.android.com/training/package-visibility e
            https://developer.android.com/reference/android/content/Intent#ACTION_PROCESS_TEXT.

            Em particular, isso é usado pelo engine Flutter em io.flutter.plugin.text.ProcessTextPlugin. -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
    </queries>
</manifest>
